{% extends 'base.html.twig' %}

{% block title %}Informatique forum{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">
    
                <div class="ibox-content m-b-sm border-bottom rounded-4">
                    <div class="p-xs">
                        <div class="pull-left m-r-md">
                            <i class="fa fa-globe text-navy mid-icon"></i>
                        </div>
                        <h2>Welcome to our forum</h2>
                        <span>Feel free to choose a category you're interested in.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">
    
                <div class="ibox-content m-b-sm border-bottom rounded-4">
                    <div class="p-xs d-flex justify-content-between align-items-lg-center">
                        <h2>Categories</h2>
                        <a href="{{path('add_category')}}"> Add Category</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight pt-5 d-flex justify-content-around">
                {% for category in forms %}
                    <div class="card" style="width: 18rem; height: 120px;">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h5 class="card-title text-xl-center ">
                                <a href="{{path('show_topic', {'id': category.id })}}" class="" style="text-decoration: none;">{{category.nomcategory}}</a> 
                            </h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
